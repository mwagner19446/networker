<h1>Meetup Connections</h1>
Find Meetups that match your interest

<%=form_tag "meetuplist" do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= label_tag :topic %>
  <%= text_field_tag :topic %>

  <%=submit_tag "Search" %>
<%end%>


<%unless @from_meetup.nil? %>
  <table >
    <tr>
      <th></th>
      <th>Name</th>
      <th>Headline</th>
      <th><th>
    </tr>
    <% @from_meetup.each do |meetup| %>
    <tr>
      <td><%=meetup["name"]%></td>
      <td><%=meetup["rating"]%></td>
      <td><%=meetup["description"]%></td>
      <td></td>
    </tr> 
    <% end %>
  </table>
<%end%>