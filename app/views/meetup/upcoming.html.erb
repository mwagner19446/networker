<h1>Upcoming Meetups</h1>
Find Meetups Events that match your interest

<%= render "form" %>


<%unless @upcoming_meetup.nil? %>
  <table >
    <tr>
      <th>Status</th>
      <th>GroupName</th>
      <th>Date</th>
      <th><th>
    </tr>
    <% @upcoming_meetup.each do |meetup| %>
    <tr>
      <td><%=meetup["status"]%></td>
      <td><%=meetup["group"]["name"]%></td>
      <td><%=Time.at(meetup["time"]/1000).strftime("%A %Y-%m-%d %I:%M %p")%></td>
      <td><%= link_to "Add", user_tasks_path(params[:id], :title=>("Meetup: "+meetup["group"]["name"]), :due_date=>Time.at(meetup["time"]/1000).strftime("%Y-%m-%d %I:%M %p") ), method: "post"%></td>
    </tr> 
    <% end %>
  </table>
<%end%>