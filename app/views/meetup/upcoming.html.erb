<h1>Upcoming Meetups</h1>
Find Meetups that match your interest

<%=form_tag "upcomingmeetup" do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= label_tag :topic %>
  <%= text_field_tag :topic %>

  <%=submit_tag "Search" %>
<%end%>


<%unless @upcoming_meetup.nil? %>
  <table >
    <tr>
      <th>Status</th>
      <th>GroupName</th>
      <th>Date</th>
      <th><th>
    </tr>
    <% @upcoming_meetup.each do |meetup| %>
    <tr>
      <td><%=meetup["status"]%></td>
      <td><%=meetup["group"]["name"]%></td>
      <td><%=Time.at(meetup["time"]/1000)%></td>
      <td><%= link_to "Add", user_tasks_path(params[:id], :title=>("Meetup: "+meetup["group"]["name"]) ), method: "post" %></td>
    </tr> 
    <% end %>
  </table>
<%end%>