<h1>Meetup Groups</h1>

<%=form_tag "/search" do %>
  <%= label_tag :zipcode %>
  <%= text_field_tag :zipcode %>
  <%= label_tag :topic %>
  <%= text_field_tag :topic %>
  <%=submit_tag "Search" %>
<%end%>

<%unless @group_meetup.nil? %>
  <table >
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
    </tr>
    <% @group_meetup.each do |meetup| %>
    <tr>
      <td><img src="<%=meetup["photo_url"]%>" height="80" width="80" ></td>
      <td><%=link_to (meetup["who"]+" ("+meetup["members"]+" members)"), meetup["link"]%></td>
      <td><%=meetup["description"]%></td>
    </tr> 
    <% end %>
  </table>
<%end%>
